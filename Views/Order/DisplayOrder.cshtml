@model DataTable;
@using System.Data;
@if (ViewBag.ErrorMessage != null)
{
    <div class="alert alert-danger">
        @ViewBag.ErrorMessage
    </div>
}
<div class="pagetitle">
    <h1>Orders</h1>
</div><!-- End Page Title -->

<section class="section">
    <div class="row">
        <div class="col-lg-12">

            <div class="card">
                <div class="card-body">
                    @* <p>Add lightweight datatables to your project with using the <a href="https://github.com/fiduswriter/Simple-DataTables" target="_blank">Simple DataTables</a> library. Just add <code>.datatable</code> class name to any table you wish to conver to a datatable. Check for <a href="https://fiduswriter.github.io/simple-datatables/demos/" target="_blank">more examples</a>.</p> *@
                    <a asp-controller="Order" asp-action="FormOrder">
                        <button class="btn btn-primary float-end m-2">Add</button>
                    </a>
                    <table class="table datatable">
                        <thead>
                            <tr>
                                <th>Order Number</th>
                                <th>Order Date</th>
                                <th>Payment Mode</th>
                                <th>Total Amount</th>
                                <th>Shipping Address</th>
                                <th>Customer Name</th>
                                <th>User name</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (DataRow o in Model.Rows)
                            {
                                <tr>
                                    <td>@o["OrderNumber"]</td>
                                    <td>@o["OrderDate"]</td>
                                    <td>@o["PaymentMode"]</td>
                                    <td>@o["TotalAmount"]</td>
                                    <td>@o["ShippingAddress"]</td>
                                    <td>@o["CustomerName"]</td>
                                    <td>@o["UserName"]</td>
                                    <td>
                                        <a class="btn btn-success" asp-controller="Order" asp-action="FormOrder" asp-route-OrderID="@o["OrderId"]">Edit</a>
                                        <a class="btn btn-danger" asp-controller="Order" asp-action="OrderDelete" asp-route-OrderID="@o["OrderID"]" onclick="return confirmDelete();">Delete</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    <!-- End Table with stripped rows -->

                </div>
            </div>
        </div>
    </div>
</section>
<script>
    function confirmDelete() {
        return confirm('Are you sure you want to delete this order?');
    }
</script>