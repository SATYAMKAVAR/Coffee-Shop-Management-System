
@model Nice_Admin_1.Models.ProductModel
<div class="pagetitle">
    <h1>Form Product</h1>
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
            <li class="breadcrumb-item">Forms</li>
            <li class="breadcrumb-item active">Product</li>
        </ol>
    </nav>
</div>
<section class="section">
    <div class="row">
        <div class="col">

            <div class="card">
                <div class="card-body">
                    <form class="row g-3 pb-3" asp-controller="Product" asp-action="ProductSave">
                        @Html.HiddenFor(x => x.ProductID)
                        <div asp-validation-summaray="ModelOnly"></div>
                        
                        <div class="col-12">
                            <label for="inputNanme4" class="form-label">Product Name</label>
                            <input type="text" asp-for="ProductName" class="form-control" id="inputNanme4">
                            <span asp-validation-for="ProductName" class="text-danger"></span>
                        </div>
                        <div class="col-12">
                            <label for="inputNanme4" class="form-label">Product Price</label>
                            <input type="number" asp-for="ProductPrice" class="form-control" id="inputNanme4">
                            <span asp-validation-for="ProductPrice" class="text-danger"></span>
                        </div>
                        <div class="col-12">
                            <label for="inputNanme4" class="form-label">Product Code</label>
                            <input type="text" asp-for="ProductCode" class="form-control" id="inputNanme4">
                            <span asp-validation-for="ProductCode" class="text-danger"></span>
                        </div>
                        <div class="col-12">
                            <label for="inputNanme4" class="form-label">Description</label>
                            <input type="text" asp-for="Description" class="form-control" id="inputNanme4">
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>
                        <div class="col-12">
                            <label for="inputNanme4" class="form-label">User ID</label>
                            <select id="inputState" class="form-select" asp-for="UserID" aria-label="Default select example" asp-items="@ViewBag.UserList">
                                <option value="">Select an option</option>
                            </select>
                            <span asp-validation-for="UserID" class="text-danger"></span>
                        </div>
                        <div class="text-center">
                            <button type="submit" class="btn btn-primary" >Submit</button>
                            <button type="reset" class="btn btn-secondary">Reset</button>
                        </div>
                    </form>
                </div>
            </div>

        </div>
    </div>
</section>

@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }   
}
