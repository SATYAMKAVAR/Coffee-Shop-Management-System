@model DataTable;
@using System.Data;

<div class="pagetitle">
    <h1>Product Table</h1>
</div><!-- End Page Title -->

<section class="section">
    <div class="row">
        <div class="col-lg-12">

            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Datatables</h5>
                    <p>Add lightweight datatables to your project with using the <a href="https://github.com/fiduswriter/Simple-DataTables" target="_blank">Simple DataTables</a> library. Just add <code>.datatable</code> class name to any table you wish to conver to a datatable. Check for <a href="https://fiduswriter.github.io/simple-datatables/demos/" target="_blank">more examples</a>.</p>
                    <a asp-controller="Product" asp-action="FormProduct">
                        <button class="btn btn-primary float-end m-2">Add</button>
                    </a>
                    <!-- Table with stripped rows -->
                    <table class="table datatable">
                        <thead>
                            <tr>
                                <th>Product ID</th>
                                <th>Product Name</th>
                                <th>Product Price</th>
                                <th>Product Code</th>
                                <th>Description</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (DataRow p in Model.Rows)
                            {
                                <tr>
                                    <td>@p["ProductID"]</td>
                                    <td>@p["ProductName"]</td>
                                    <td>@p["ProductPrice"]</td>
                                    <td>@p["ProductCode"]</td>
                                    <td>@p["Description"]</td>
                                    <td>
                                        <a class="btn btn-success" asp-controller="Product" asp-action="FormProduct" asp-route-ProductID="@p["ProductID"]">Edit</a>
                                        <a class="btn btn-danger btn-xs" asp-controller="Product" asp-action="ProductDelete" asp-route-ProductID="@p["ProductID"]">Delete</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    <!-- End Table with stripped rows -->

                </div>
            </div>

        </div>
    </div>
</section>


